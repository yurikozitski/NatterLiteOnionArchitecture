@model LoginViewModel
@{ ViewBag.Title = "NatterLite-Login"; }

<link rel="stylesheet" href="~/css/Account/login.css" />

<div class="Login">
    <form asp-antiforgery="true" asp-action="Login" asp-controller="Account">

        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <p>
            <label asp-for="Email">Email:</label><br />
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </p>
        <p>
            <label asp-for="Password">Password:</label><br />
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password"></span>
        </p>
        <p>
            <div class="button"><input type="submit" value="Log In" /></div>
        </p>
        <p>Don't have an account? <a href="/Account/Register">Register</a></p>

    </form>
</div>
@await Html.PartialAsync("_ValidationScriptsPartial")
